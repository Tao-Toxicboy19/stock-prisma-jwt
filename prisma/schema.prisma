generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  password   String
  profile    String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
}

model Products {
  id            Int          @id @default(autoincrement())
  productImage  String
  productName   String
